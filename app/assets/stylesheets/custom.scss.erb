@import "bootstrap-sprockets";
@import "bootstrap";

//= depend_on_asset "MyStore.jpg"

// light blue  #23B4EC

html {
  height: 100%;
}

body {
  background-color: #23B4EC;
  color: #fff;
  font-family: 'Cutive Mono', ;
}

h1 {
  font-size: 4em;
  margin-left: 20px;
}

h3 {
  margin-left: 20px;
}

img {
  height: 200px;
}

.intro {
  margin-top: 50px;
}

.white-background {
  background-color: #fff;
  color: darkslategray;
  font-family: 'Lato', sans-serif;
  margin: 60px auto;
  padding: 10px 0px 40px 40px;
}

.gray-font {
  color: darkslategray;
  font-family: 'Lato', sans-serif;
}
.white-button-border {
  margin: 40px 5px 20px 5px;
  padding: 3px 3px 3px 3px;
  color: black;
  background-color: #fff200;
  font-family: 'Lato', sans-serif;
  font-weight: bold;
  letter-spacing: 3px;
}

.item-title {
  font-family: 'Lato', sans-serif;
}

.book-position {
  padding-top: 60px;
  min-height: 430px;
}

@media only screen and (max-width: 500px) {
  h1 {
    font-size: 2.5em;
    margin-left: 20px;
  }
  h3 {
    font-size: 1.2em;
    margin-left: 20px;
  }
  .white-button-border {
    margin: 20px 0px 0px 0px;
    padding: 8px 60px 8px 10px;
    color: black;
    background-color: #fff200;
    font-family: 'Lato', sans-serif;
    font-weight: bold;
    letter-spacing: 2px;
    max-width: 120px;
  }
}
