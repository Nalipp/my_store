<% obj.each do |item| %>
<div class="col-lg-4 col-md-6 col-sm-6 book-position">
  <div class="modal fade" id="myModal<%= item.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document" class="close" data-dismiss="modal" aria-label="Close">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title gray-font" id="myModal<%= item.id %>"><%= item.title %></h1>
        </div>
        <div class="modal-body">
          <h2 class="gray-font" id="modal-font"><%= item.description %></h2>
        </div>
        <div class="modal-footer">
          <h2>
            <% if user_signed_in? && current_user.admin? %>
            <span class="pull-left"><%= link_to 'Edit', edit_item_path(item) %> /
            <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></span>
            <% end %>
            $<%= item.price %>
          </h2>
        </div>
      </div>
    </div>
  </div>
    <p data-toggle="modal" data-target="#myModal<%= item.id %>"><%= image_tag item.image.url(:medium) %></p>
    <h4 class="item-title"><%= item.title %></h4>
    <p><%= truncate(item.description, length:80) %></p>
    <p>$<%= item.price %></p>
    <p>
      <% if user_signed_in? && current_user.admin? %>
      <%= link_to 'Edit', edit_item_path(item) %> /
      <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </p>
</div>
<% end %>
